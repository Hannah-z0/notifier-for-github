{
	"private": true,
	"type": "module",
	"scripts": {
		"lint": "run-p lint:*",
		"lint:js": "xo source/**/*.js && xo test/**/*.js",
		"lint:css": "stylelint source/**/*.css",
		"lint-fix": "run-p 'lint:* -- --fix'",
		"test": "run-s lint:* test:* build",
		"test:js": "rollup test/*-test.js --dir .built/test --chunkFileNames _.mjs --entryFileNames [name].mjs && ava",
		"build": "webpack --config=webpack.config.cjs --mode=production",
		"watch": "webpack --config=webpack.config.cjs --mode=development --watch",
		"web-ext:firefox": "web-ext run --source-dir ./distribution/",
		"web-ext:chrome": "web-ext run --target chromium --source-dir ./distribution/",
		"dev:firefox": "npm-run-all -p watch web-ext:firefox",
		"dev:chrome": "npm-run-all -p watch web-ext:chrome",
		"prerelease:version": "VERSION=$(utc-version); echo $VERSION; dot-json distribution/manifest.json version $VERSION",
		"prerelease:source-url": "if [ ! -z \"${TRAVIS_REPO_SLUG}\" ]; then echo https://github.com/$TRAVIS_REPO_SLUG/tree/\"${TRAVIS_TAG:-$TRAVIS_COMMIT}\" > distribution/SOURCE_URL; fi",
		"release": "npm-run-all build prerelease:* release:*",
		"release:cws": "webstore upload --source=distribution --auto-publish",
		"release:amo": "web-ext-submit --source-dir distribution"
	},
	"dependencies": {
		"delay": "^4.3.0",
		"rollup": "^2.18.2",
		"webext-base-css": "^1.1.0",
		"webext-options-sync": "^1.2.3",
		"webextension-polyfill": "^0.6.0"
	},
	"devDependencies": {
		"@types/chrome": "0.0.117",
		"ava": "^3.9.0",
		"chrome-webstore-upload-cli": "^1.2.0",
		"copy-webpack-plugin": "^6.0.3",
		"dot-json": "^1.2.0",
		"lodash.merge": "^4.6.2",
		"moment": "^2.27.0",
		"npm-run-all": "^4.1.5",
		"sinon": "^9.0.2",
		"sinon-chrome": "^3.0.1",
		"size-plugin": "^2.0.1",
		"stylelint": "^13.6.1",
		"stylelint-config-xo": "^0.19.0",
		"terser-webpack-plugin": "^3.0.6",
		"utc-version": "^2.0.2",
		"web-ext": "^4.3.0",
		"web-ext-submit": "^4.3.0",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.12",
		"xo": "^0.32.0"
	},
	"ava": {
		"files": [
			".built/test/*-test.mjs"
		]
	},
	"xo": {
		"envs": [
			"browser"
		],
		"ignores": [
			"distribution"
		],
		"rules": {
			"no-await-in-loop": "off",
			"import/no-unassigned-import": "off",
			"ava/no-ignored-test-files": "off"
		},
		"globals": [
			"browser"
		]
	},
	"stylelint": {
		"extends": "stylelint-config-xo",
		"rules": {
			"declaration-no-important": null
		}
	}
}
